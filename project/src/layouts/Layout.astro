---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonical?: string;
}

const { 
  title, 
  description = "Discover all 32 sacred forms of Ganesha through authentic mantras, meanings, and engaging stories perfect for kids. Learn about each divine manifestation with beautiful illustrations and spiritual significance.",
  keywords = "32 forms of Ganesha, Ganesha avatars, Ganesha mantras, Hindu mythology for children, Kathaswithpooja, Ganesha stories kids, Indian culture children, Vinayaka forms, Ganapati manifestations",
  ogImage = "/ganesha-og-image.jpg",
  canonical
} = Astro.props;

const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Kathaswithpooja" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:site_name" content="Ganesha for Kids - Kathaswithpooja" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="copyright" content="Kathaswithpooja" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Ganesha for Kids - 32 Forms",
        "alternateName": "Kathaswithpooja",
        "url": "https://ganeshaforkids.com",
        "description": "Educational website featuring all 32 sacred forms of Ganesha with authentic mantras, meanings, and stories for children",
        "publisher": {
          "@type": "Organization",
          "name": "Kathaswithpooja"
        },
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://ganeshaforkids.com/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700;800&family=Noto+Sans+Devanagari:wght@400;500;600&display=swap" rel="stylesheet">
  </head>
  <body class="bg-warm-bg min-h-screen font-body">
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: 'Inter', sans-serif;
  }
  
  .font-heading {
    font-family: 'Poppins', sans-serif;
  }
  
  .font-sanskrit {
    font-family: 'Noto Sans Devanagari', 'Inter', sans-serif;
  }
</style>