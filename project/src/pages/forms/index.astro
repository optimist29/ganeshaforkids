---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import GaneshaCard from '../../components/GaneshaCard.astro';
import { ganeshaForms } from '../../data/ganeshaForms.js';
---

<Layout 
  title="All 32 Forms of Ganesha | Complete Collection | Kathaswithpooja"
  description="Explore all 32 sacred forms of Ganesha with authentic mantras, meanings, and stories. Complete collection of Ganesha avatars with beautiful illustrations and spiritual significance."
  keywords="32 forms of Ganesha, Ganesha avatars, Ganesha forms, Ganesha mantras, Hindu mythology, Kathaswithpooja, Ganesha stories for kids"
>
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-ganesha-orange via-ganesha-yellow to-ganesha-pink py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-heading font-bold text-4xl sm:text-5xl text-white mb-4">
        32 Sacred Forms of Ganesha
      </h1>
      <p class="text-xl sm:text-2xl text-white/90 mb-6">
        Complete Collection with Authentic Mantras & Stories
      </p>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        Discover each divine manifestation of Ganesha, complete with traditional mantras, 
        spiritual meanings, and engaging stories perfect for learning and devotion.
      </p>
    </div>
  </section>
  
  <!-- Forms Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {ganeshaForms.map((form) => (
          <GaneshaCard
            name={form.name}
            description={form.description}
            image={form.image}
            slug={form.slug}
            significance={form.significance}
            color={form.color}
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- YouTube Playlist Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-heading font-bold text-3xl text-gray-800 mb-6">
        Watch the Complete Video Series
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        Experience these beautiful stories through our engaging video playlist on YouTube
      </p>
      <a 
        href="https://www.youtube.com/watch?v=OVIz8M8fva0&list=PLKXAZ7trxJgc-C_0x3iGfuicQN0K_QjRN"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center space-x-3 bg-red-600 text-white font-semibold px-8 py-4 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <span>Watch Full Playlist</span>
      </a>
    </div>
  </section>
  
  <Footer />
</Layout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "32 Forms of Ganesha",
  "description": "Complete collection of all 32 sacred forms of Ganesha with mantras, meanings, and stories",
  "url": "https://ganeshaforkids.com/forms",
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": 32,
    "itemListElement": [
      {
        "@type": "Article",
        "position": 1,
        "name": "Bala Ganapathi",
        "url": "https://ganeshaforkids.com/forms/bala-ganapathi"
      }
    ]
  }
}
</script>