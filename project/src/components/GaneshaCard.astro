---
export interface Props {
  name: string;
  description: string;
  image: string;
  slug: string;
  significance: string;
  color: string;
}

const { name, description, image, slug, significance, color } = Astro.props;
---

<div class={`bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105 overflow-hidden border-t-4 border-${color}`}>
  <!-- Image Section -->
  <div class="relative h-48 overflow-hidden">
    <img 
      src={image} 
      alt={`${name} - ${significance}`}
      class="w-full h-full object-cover"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
  </div>
  
  <!-- Content Section -->
  <div class="p-6">
    <h3 class="font-heading font-bold text-2xl text-gray-800 mb-3">
      {name}
    </h3>
    
    <p class="text-gray-600 mb-4 leading-relaxed">
      {description}
    </p>
    
    <div class="flex items-center justify-between">
      <span class={`text-sm font-medium px-3 py-1 rounded-full bg-${color}/10 text-${color}-600`}>
        {significance}
      </span>
      
      <a 
        href={`/forms/${slug}`}
        class={`inline-flex items-center space-x-2 text-${color}-600 hover:text-${color}-700 font-semibold transition-colors group`}
      >
        <span>Learn More</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</div>